{% extends 'base.html.twig' %}
{% block title 'Les marques' %}
{% block body %}
    <div class="row m-0">
        <div class="menu-admin d-lg-block col-lg-2 d-none">
            {{ include('layout/sidebar.html.twig') }}
        </div>
        <div class="container-admin offset-lg-2 col-lg-10 offset-0 col-12">
            <div class="container mt-4">
                <div class="title-row">
                    <div class="row">
                        <div class="col-3 text-left">
                            <a href="{{ path('admin.brand.new') }}" class="btn btn-icon btn-outline-success"
                               title="Ajouter"><i class="fa fa-plus" aria-hidden="true"></i></a>
                        </div>
                        <div class="col-6">
                            <h3>Gestion des marques</h3>
                        </div>
                    </div>
                </div>

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}

                <table class="table table-bordered table-hover table-striped">
                    <thead>
                    <tr>
                        <th>Image</th>
                        <th>Nom</th>
                        <th colspan="2">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for brand in brands %}
                        <tr>
                            <td class="td-image"> {% if brand.image %}
                                    <img src="{{ '/images/products/' ~ brand.image }}"
                                         alt="card-img-top"
                                         style="width: 100px; height: auto;">
                                {% else %}
                                    <img src="{{ '/images/empty.jpg' }}" alt="card-img-top"
                                         style="width: 100px; height: auto;">
                                {% endif %}
                            </td>
                            <td class="td-name align-middle">{{ brand.name }}</td>
                            <td class="td-options align-middle">
                                <a href="{{ path('admin.brand.edit',  {id: brand.id }) }}" class="btn btn-dark btn-icon"
                                   title="Editer"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                </a>
                            </td>
                            <td class="td-options align-middle">
                                <form method="post" action="{{ path('admin.brand.delete', {id: brand.id}) }}"
                                      onsubmit="return confirm('Etes-vous sur de vouloir supprimer cette marque?')">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ brand.id) }}">
                                    <button class="btn btn-dark btn-icon" title="Supprimer"><i class="fa fa-trash"
                                                                                             aria-hidden="true"></i>
                                    </button>
                                </form>
                            </td>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}