{% extends 'admin/base.html.twig' %}
{% block title 'Les commandes' %}
{% block body %}
    <div class="container mt-4">
        <h2>Les categories</h2>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="btn-new-product text-left my-3">
            <a href="{{  path('admin.category.new') }}" class="btn btn-primary button">Nouvelle cat√©gorie</a>
        </div>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>name</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('admin.category.edit',  {id: category.id }) }}" class="btn btn-secondary button">Editer</a>
                        <form method="post" action="{{   path('admin.category.delete', {id: category.id}) }}" style="display: inline-block" onsubmit="return confirm('Etes-vous sur de vouloir supprimer ce bien?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                            <button class="btn btn-danger button">Supprimer</button>
                        </form>
                    </td>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}