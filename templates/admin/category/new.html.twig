{% extends 'admin/base.html.twig' %}
{% block title "Nouvelle catégorie" %}

{% block body %}
    <div class="container mt-4">
        <h2>Nouvelle catégorie</h2>

        {{ form_start(form) }}
        <div class="row">
            <div class="offset-3 col-md-6">{{ form_row(form.name) }}</div>
        </div>
        {{ form_widget(form) }}
        <div class="text-center">
            <button class="btn btn-primary button">{{ button|default('Enregistrer') }}</button>
        </div
        {{ form_end(form) }}
    </div>
{% endblock %}

