{% extends 'base.html.twig' %}
{% block title 'Accueil' %}

{% block body %}
    <div class="row m-0">
        <div class="menu-admin d-lg-block col-lg-2 d-none">
            {{ include('layout/sidebar.html.twig') }}
        </div>
        <div class="container-admin col-lg-10 col-12">
            <div class="container mt-4">
                <h2>Les commandes en attente</h2>

                <table class="table table-bordered table-hover table-striped">
                    <thead>
                    <tr>
                        <th>Référence</th>
                        <th>Client</th>
                        <th>Date</th>
                        <th>Payment</th>
                        <th>Prix total</th>
                        <th colspan="2">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for order in orders %}
                        <tr>
                            <td class="align-middle">{{ order.reference }}</td>
                            <td class="align-middle">{{ order.user.fullname }}</td>
                            <td class="align-middle">{{ order.formattedDate }}</td>
                            <td class="align-middle">{{ order.paymentMethod.name }}</td>
                            <td class="align-middle">{{ order.formattefTotalPrice }} €</td>
                            <td class="td-options align-middle">
                                <a href="" class="btn btn-dark btn-icon" title="détail de la commande"><i class="fa fa-eye" aria-hidden="true"></i></a>
                            </td>
                            <td class="td-options align-middle">
                                <a href="" class="btn btn-dark btn-icon" title="facture de la commande"><i class="fa fa-download" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="container mt-4">
                <h2>Les derniers produits enregistrés</h2>
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                    <tr>
                        <th>Image</th>
                        <th>Produit</th>
                        <th colspan="2">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                    <tr>
                        <td class="td-image">
                            {% if product.image %}
                                <img src="{{ '/images/products/' ~ product.image }}"
                                     alt="card-img-top"
                                     style="width: 100px; height: auto;">
                            {% else %}
                                <img src="{{ '/images/empty.jpg' }}" alt="card-img-top"
                                     style="width: 100px; height: auto;">
                            {% endif %}
                        </td>
                        <td class="td-name align-middle">{{ product.name }}</td>
                        <td class="td-options align-middle">
                            <a href="{{ path('admin.product.edit',  {id: product.id }) }}"
                               class="btn btn-icon btn-dark"
                               title="Editer"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            </a>
                        </td>
                        <td class="td-options align-middle">
                            <form method="post" action=""
                                  onsubmit="return confirm('Etes-vous sur de vouloir supprimer ce bien?')">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="">
                                <button class="btn btn-dark btn-icon" title="Supprimer"><i class="fa fa-trash"
                                                                                           aria-hidden="true"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    </tbody>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}