{% extends 'admin/base.html.twig' %}
{% block title 'Les produits' %}
{% block body %}
    <div class="container mt-4">
        <h2>Gestion des produits</h2>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="btn-new-product text-left my-3">
            <a href="{{  path('admin.product.new') }}" class="btn btn-primary button">Nouveau Produit</a>
        </div>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>
                        <a href="" class="btn btn-secondary button">Editer</a>
                        <form method="post" action="" style="display: inline-block" onsubmit="return confirm('Etes-vous sur de vouloir supprimer ce bien?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" >
                            <button class="btn btn-danger button">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}