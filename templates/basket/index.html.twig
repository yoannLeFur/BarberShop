{% extends 'base.html.twig' %}
{% block title 'La boutique' %}

{% block body %}
    <div class="container mt-4">
        <div class="row title-row">
            <div class="offset-4 col-4">
                <h3>Mon Panier</h3>
            </div>
            {% if items | length > 0 %}
            <div class="col-4 text-right">
                <a href="" class="btn btn-success button" title="Valider le panier">Valider le panier</a>
            </div>
            {% endif %}
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% if items | length > 0 %}
        <table class="table table-bordered table-hover table-striped">
            <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
            <tr>
                <td class="align-middle">{{ item.product.name }}</td>
                <td class="align-middle">{{ item.product.price }} €</td>
                <td class="align-middle">{{ item.quantity }}</td>
                <td class="align-middle">{{ item.product.price * item.quantity }} €</td>
                <td class="align-middle"><a href="{{ path('basket.delete', { 'id': item.product.id }) }}" class="btn btn-dark button">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total</td>
                <td> {{ total }} €</td>
                <td></td>
            </tr>
            </tfoot>
        </table>
        <div class="row py-3">
            <div class="col-12 text-right">
                <a href="" class="btn btn-success button" title="Valider le panier">Valider le panier</a>
            </div>
        </div>
        {% else %}
            <p>Votre panier est vide !</p>
        {% endif %}
    </div>

{% endblock %}