{% extends 'base.html.twig' %}
{% block title 'La boutique' %}

{% block body %}
    <div class="container mt-4">
        <div class="title-row">
            <div class="row">
                <div class="offset-lg-3 col-lg-6 offset-0 col-6">
                    <h3>Mon Panier</h3>
                </div>
                {% if items | length > 0 %}
                    <div class="col-lg-3 col-6 text-right">
                        <a href="{{ path('basket.livraison') }}" class="btn btn-success btn-lg"
                           title="Valider le panier">Valider le panier</a>
                    </div>
                {% endif %}
            </div>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {% if items | length > 0 %}
        <table class="table table-bordered table-hover table-striped">
            <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th colspan="3">Quantité</th>
                <th>Total</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
            <tr>
                <td class="align-middle">{{ item.product.name }}</td>
                <td class="align-middle">{{ item.product.price }} €</td>
                <td class="td-options align-middle">
                    <a href="{{ path('basket.remove', { 'id': item.product.id }) }}" class="btn btn-dark btn-icon">
                        <i class="fa fa-minus" aria-hidden="true"></i>
                    </a>
                </td>
                <td class="td-options align-middle">
                    <span class="col-12">{{ item.quantity }}</span>
                </td>
                <td class="align-middle">
                    <a href="{{ path('basket.addQuantity', { 'id': item.product.id }) }}" class="btn btn-dark btn-icon">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                    </a>
                </td>
                <td class="align-middle">{{ item.product.price * item.quantity }} € </td>
                <td class="align-middle"><a href="{{ path('basket.delete', { 'id': item.product.id }) }}" class="btn btn-dark btn-icon">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="5" class="text-right">Total</td>
                <td> {{ total }} €</td>
                <td></td>
            </tr>
            </tfoot>
        </table>
        <div class="row py-3">
            <div class="col-12 text-right">
                <a href="{{ path('basket.livraison') }}" class="btn btn-success btn-lg" title="Valider le panier">Valider le panier</a>
            </div>
        </div>
        {% else %}
            <p>Votre panier est vide !</p>
        {% endif %}
    </div>

{% endblock %}