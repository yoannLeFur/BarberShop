<nav class="color-nav navbar navbar-expand-lg navbar-dark py-0">
    <a class="navbar-brand home-link" href="{{ path('home.index') }}">BarberShop</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link button-link {% if current_menu is defined and current_menu == 'products' %}active{% endif %}"
                   href="{{ path('product.index') }}">Boutique</a>
            </li>
        </ul>
    </div>
    {% if not app.user %}
    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle button-link {% if current_menu is defined and current_menu == 'user' %}active{% endif %}"
               href="#" role="button"
               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-user"></i>
            </a>
            <div class="dropdown-menu security" aria-labelledby="navbarDropdownMenuLink">
                <a href="{{ path('register') }}"
                   class="dropdown-item button">Inscription</a>
                <a href="{{ path('login') }}"
                   class="dropdown-item button">Connexion</a>
            </div>
        </li>
        {% endif %}
        {% if app.user %}
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle button-link {% if current_menu is defined and current_menu == 'basket' %}active{% endif %}"
                       href="#" id="navbarDropdownMenuLink" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Panier
                        {% if items | length > 0 %}
                            <span class="badge badge-light">{{ items | length }}</span>
                        {% endif %}
                    </a>
                    <div class="dropdown-menu basket">
                        {% if items | length > 0 %}
                            <div class="dropdown-item dropdown-item-basket">
                                <div class="col-12 p-0">
                                    {% for item in items %}
                                        <div class="card" style="width: 100%">
                                            <div class="card-body card-body-hover">
                                                <div class="row">
                                                    <div class="col-3">
                                                        <img src="{{ 'images/products/' ~ item.product.image }}"
                                                             alt="card-img-top"
                                                             style="width: 100%; height: auto;">
                                                    </div>
                                                    <div class="col-9">
                                                        <div class="row">
                                                            <h5 class="basket-par text-center p-3">{{ item.product.name }}</h5>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-6">
                                                                <span class="col-12">{{ item.quantity }}</span>
                                                                <a href="{{ path('basket.delete', { 'id': item.product.id }) }}" class="btn btn-dark button">
                                                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                                                </a>
                                                            </div>
                                                            <div class="col-6">
                                                                <p class="basket-par text-right p-3">
                                                                    PRIX: {{ item.product.price }} €</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="card" style="width: 100%;">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-6">
                                                <a href="{{ path('basket.index') }}"
                                                   class="btn btn-success button">Accéder au panier</a>
                                            </div>
                                            <div class="col-6">
                                                <p class="basket-par text-right">PRIX TOTAL: {{ total }} €</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <p>Votre panier est vide !</p>
                        {% endif %}
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle button-link {% if current_menu is defined and current_menu == 'user' %}active{% endif %}"
                       href="#" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{ app.user.fullname }}
                    </a>
                    <div class="dropdown-menu security" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item button" href="{{ path('profil.index') }}">Mon profil</a>
                        {% if app.user.roles == ['ROLE_ADMIN'] %}
                            <a class="dropdown-item button" href="{{ path('admin.home') }}">Administration</a>
                        {% endif %}
                        <a class="dropdown-item button" href="{{ path('logout') }}">Se déconnecter</a>
                    </div>
                </li>
            </ul>
        {% endif %}
</nav>