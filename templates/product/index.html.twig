{% extends 'base.html.twig' %}
{% block title 'La boutique' %}

{% block body %}
    <div class="color-jumbotron-home jumbotron text-center text-white rounded-0">
        <div class="row">
            <div class="col-4">
                <img class="logo-img" src="/images/logo.jpg">
            </div>
            <div class="col-4 py-5">
                <h1 class="title-h1">La boutique du barbier</h1>
            </div>
            <div class="col-4">
                <img class="logo-img" src="/images/logo.jpg">
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                {{ form_start(form) }}
                <div class="row search">
                    <div class="col-md-3">
                        {{ form_row(form.maxPrice) }}
                    </div>
                    <div class="col-md-4 p-0">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="label-style label-size input-group-text" id="product_search_category">Catégories</span>
                            </div>
                            <div class="col-9 p-0">
                                {{ form_row(form.category) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 p-0">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="label-style label-size input-group-text" id="product_search_brand">Marques</span>
                            </div>
                            <div class="col-9 p-0">
                                {{ form_row(form.brand) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-1 p-0">
                        <button class="btn button button-search">Rechercher</button>
                    </div>
                </div>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
    <div class="container mt-5 p-0">
        <div class="row">
            {% for product in products %}
                <div class="col-md-3">
                    <div class="card my-3">
                        <div class="card-body card-body-product p-0">
                            <a class="product-link"
                               href="{{ path('product.show', {id: product.id, slug: product.slug}) }}">
                                <div>
                                    {% if product.image %}
                                        <img src="{{ 'images/products/' ~ product.image }}"
                                             alt="card-img-top"
                                             style="width: 100%; height: auto;">
                                    {% else %}
                                        <img src="{{ 'images/empty.jpg' }}" alt="card-img-top"
                                             style="width: 100%; height: auto;">
                                    {% endif %}
                                </div>
                                <div class="color-card">
                                    <h5 class="title-product-link p-3"
                                        title="{{ product.name }}">{{ product.name }}</h5>
                                    <p class="price-paragraphe text-center">{{ product.formatedPrice }} €</p>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="pagination justify-content-center">
            {{ knp_pagination_render(products) }}
        </div>
    </div>
{% endblock %}