{% extends 'base.html.twig' %}
{% block title 'La boutique' %}

{% block body %}
    <div class="color-jumbotron-home jumbotron text-center text-white rounded-0">
        <div class="row">
            <div class="col-4">
                <img class="logo-img" src="/images/logo.jpg">
            </div>
            <div class="col-4 py-5">
                <h1 class="title-h1">La boutique du barbier</h1>
            </div>
            <div class="col-4">
                <img class="logo-img" src="/images/logo.jpg">
            </div>
        </div>
        <div class="row">

            <nav class="search-nav">
                <ul class="p-0">
                    <li class="li-link">
                        <a class="nav-link huile-link">Huile</a>
                    </li>
                    <li class="li-link">
                        <a class="nav-link huile-link">Baume</a>
                    </li>
                    <li class="li-link">
                        <a class="nav-link huile-link">Cire</a>
                    </li>
                    <li class="li-link">
                        <a class="nav-link huile-link">Shampoing</a>
                    </li>
                    <li class="li-link">
                        <a class="nav-link huile-link">Accessoires</a>
                    </li>
                    <li class="li-link">
                        <a class="nav-link huile-link">Coffrets</a>
                    </li>
                    <li class="li-link">
                        <a class="nav-link huile-link">Marques</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="container mt-5 p-0">
        <div class="row">
            {% for product in products %}
                <div class="col-md-3">
                    <div class="card my-3">
                        <div class="card-body card-body-product p-0">
                            <a class="product-link" href="{{ path('product.show', {id: product.id, slug: product.slug}) }}">
                                <div>
                                    {% if product.images %}
                                        <img src="{{ {{ asset('products/' ~ product.ImageFilename) }} }}" alt="card-img-top"
                                             style="width: 100%; height: auto;">
                                    {% else %}
                                        <img src="{{ 'images/empty.jpg' }}" alt="card-img-top"
                                             style="width: 100%; height: auto;">
                                    {% endif %}
                                </div>
                                <div class="color-card">
                                    <h5 class="title-product-link p-3">{{ product.name }}</h5>
                                    <p class="price-paragraphe text-center">{{ product.formatedPrice }} â‚¬</p>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="pagination">
            {{ knp_pagination_render(products) }}
        </div>
    </div>
{% endblock %}