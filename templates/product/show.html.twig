{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-5">
                <img src="/images/empty.jpg" alt="">
            </div>
            <div class="col-7">
                <h5 id="title-product">{{ product.name }}</h5>
                <p id="price-product">{{ product.formatedPrice }} â‚¬</p>
                <p id="description-product">{{ product.description }}</p>
                <div class="row">
                    <div class="col-4">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text px-4" id="inputGroup-sizing-default"><i
                                            class="fa fa-minus"></i></span>
                            </div>
