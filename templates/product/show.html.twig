{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-5">
                {% if product.image %}
                    <img src="{{ '/images/products/' ~ product.image }}"
                         alt="card-img-top"
                         style="width: 100%; height: auto;">
                {% else %}
                    <img src="{{ '/images/empty.jpg' }}" alt="card-img-top"
                         style="width: 100%; height: auto;">
                {% endif %}
            </div>
            <div class="col-7">
                <h5 id="title-product">{{ product.name }}</h5>
                <p id="price-product">{{ product.formatedPrice }} â‚¬</p>
                <p id="description-product">{{ product.description }}</p>
                <div class="row">
                    <div class="col-4">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="remove input-group-text px-4" id="inputGroup-sizing-default"><i
                                            class="fa fa-minus"></i></span>
                            </div>
                            <input type="number" min="0" id="quantite" class="form-control col-5 number-input px-4"
                                   aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                            <div class="input-group-append">
                                <span class="input-group-text px-4" id="add"><i
                                            class="fa fa-plus"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-3">
                        <button class="btn btn-primary button">Ajouter</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}

