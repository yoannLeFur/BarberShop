                                <span class="input-group-text px-4" id="inputGroup-sizing-default"><i
                                            class="fa fa-plus"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-3">
                        <button class="btn btn-primary button">Ajouter</button>
                    </div>

                </div>
            </div>

        </div>
    </div>
{% endblock %}