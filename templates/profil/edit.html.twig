{% extends 'base.html.twig' %}
{% block title "Edition de votre profil" %}

{% block body %}
    <div class="row m-0">
        <div class="col-12">
            <div class="container mt-4">
                <h2>Edition de votre profil</h2>

                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-4">{{ form_row(form.last_name) }}</div>
                    <div class="col-md-4">{{ form_row(form.first_name) }}</div>
                    <div class="col-md-4">{{ form_row(form.mobile) }}</div>
                </div>
                <div class="row">
                    <div class="col-md-12">{{ form_row(form.username) }}</div>
                </div>
                <div class="row">
                    <div class="col-md-4">{{ form_row(form.address) }}</div>
                    <div class="col-md-2">{{ form_row(form.postalCode) }}</div>
                    <div class="col-md-3">{{ form_row(form.city) }}</div>
                    <div class="col-md-3">{{ form_row(form.country) }}</div>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary btn-lg">{{ button|default('Enregistrer') }}</button>
                </div
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

