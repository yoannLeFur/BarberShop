{% extends 'base.html.twig' %}

{% block title 'Mot de passe' %}


{% block body %}
    <div class="container mt-4">

        <h2 class="title-h2 text-center">Mot de passe oubli√©</h2>

        {% for message in app.flashes('danger') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('warning') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('notice') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <form action="{{ path("forgotten.password") }}" method="post">
            <div class="form-group">
                <label class="label-size" for="username">Email</label>
                <input type="email" id="username" name="_username" class="form-control">
            </div>
            <div class="row">
                <div class="offset-lg-3 col-lg-6 offset-0 col-12 text-center">
                    <button class="btn btn-lg btn-primary">Valider</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}