{% extends 'base.html.twig' %}

{% block title 'Se connecter' %}


{% block body %}
    <div class="container mt-4">

        <h2 class="title-h2 text-center">Connexion</h2>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey | trans(error.messagedata,'security') }}
            </div>
        {% endif %}
        <form action="{{ path("login") }}" method="post">
            <div class="form-group">
                <label class="label-size" for="username">Email</label>
                <input type="email" id="username" name="_username" class="form-control" value="{{ last_username }}">
            </div>
            <div class="form-group">
                <label class="label-size" for="password">Mot de passe</label>
                <input type="password" id="password" name="_password" class="form-control">
            </div>
            <div class="row">
                <div class="offset-lg-3 col-lg-6 offset-0 col-12 text-center">
                    <button class="btn btn-lg btn-primary">Se connecter</button>
                </div>
                <div class="col-lg-3 col-12 text-center">
                    <a href="{{ path('forgotten.password') }}">Mot de passe oubli√© ?</a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

