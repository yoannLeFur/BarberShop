{% extends 'base.html.twig' %}

{% block title "S'inscrire" %}

{% block body %}

    <div class="container mt-4">
        <h2 class="title-h2 text-center">Inscription</h2>

        {{ form_start(form) }}
        <div class="row">
            <div class="col-6">{{ form_row(form.first_name) }}</div>
            <div class="col-6">{{ form_row(form.last_name) }}</div>
        </div>
        <div class="row">
            <div class="col-6">{{ form_row(form.username) }}</div>
            <div class="col-6">{{ form_row(form.mobile) }}</div>
        </div>
        <div class="row">
            <div class="col-12">{{ form_row(form.password) }}</div>
        </div>
        <div class="row">
            <div class="col-3">{{ form_row(form.address) }}</div>
            <div class="col-3">{{ form_row(form.postalCode) }}</div>
            <div class="col-3">{{ form_row(form.city) }}</div>
            <div class="col-3">{{ form_row(form.country) }}</div>
        </div>
        {{ form_rest(form) }}
        <div class="text-center">
            <button class="btn btn-lg btn-primary">Enregistrer</button>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
